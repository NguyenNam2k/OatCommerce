<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - OatWebGuest</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @{
        var description = (ViewData["Description"] as string) ?? "Khám phá Overnight Oats & Oatmeal Bar: yến mạch qua đêm, cháo yến mạch ấm, topping trái cây, hạt và yogurt. Bữa sáng lành mạnh, tiện lợi cho lịch bận rộn.";
        var keywords = (ViewData["Keywords"] as string) ?? "overnight oats, oatmeal, yến mạch, bữa sáng lành mạnh, yogurt, granola";
        var canonical = (ViewData["Canonical"] as string) ?? "https://oatcure.vn/";
        var ogTitle = (ViewData["OgTitle"] as string) ?? ((ViewData["Title"] as string) ?? "Overnight Oats & Oatmeal Bar");
        var ogDescription = (ViewData["OgDescription"] as string) ?? description;
        var ogImage = (ViewData["OgImage"] as string) ?? "https://images.unsplash.com/photo-1511690743698-d9d85f2fbf38?auto=format&fit=crop&w=1200&q=80";
    }

    <!-- SEO -->
    <meta name="description" content="@description" />
    <meta name="keywords" content="@keywords" />
    <link rel="canonical" href="@canonical" />
    <meta name="last-modified" content="2024-01-01" />

    <!-- Open Graph -->
    <meta property="og:title" content="@ogTitle" />
    <meta property="og:description" content="@ogDescription" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@canonical" />
    <meta property="og:image" content="@ogImage" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" />

    <!-- Element/Tailwind dependencies -->
    <script src="https://cdn.tailwindcss.com/3.4.16"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css" />

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#57b5e7',
                        secondary: '#8dd3c7'
                    },
                    borderRadius: {
                        'none': '0px',
                        'sm': '4px',
                        DEFAULT: '8px',
                        'md': '12px',
                        'lg': '16px',
                        'xl': '20px',
                        '2xl': '24px',
                        '3xl': '32px',
                        'full': '9999px',
                        'button': '8px'
                    }
                }
            }
        }
    </script>

    <!-- Existing local styles (keep) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Extracted from wwwroot/index.html -->
    <link rel="stylesheet" href="~/css/index.element.css" asp-append-version="true" />
</head>
<body class="bg-white">
    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Existing site scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Extracted from wwwroot/index.html -->
    <script src="~/js/index.element.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>