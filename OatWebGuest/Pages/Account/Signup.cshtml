@page
@model OatWebGuest.Pages.Account.SignupModel
@{
    ViewData["Title"] = "??ng ký";
    ViewData["Description"] = "T?o tài kho?n ?? ??t Overnight Oats & Oatmeal nhanh h?n.";
}

<div class="min-h-screen oat-page flex items-center justify-center px-6 py-16 bg-gradient-to-b from-white to-gray-50">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
        <div class="flex items-center gap-3 mb-6">
            <span class="h-12 w-12 rounded-full bg-amber-300 flex items-center justify-center font-bold text-amber-900">OAT</span>
            <div>
                <div class="text-sm uppercase tracking-wide text-gray-500">OatCure</div>
                <h1 class="text-2xl font-bold text-gray-900">T?o tài kho?n</h1>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
        {
            <div class="mb-4 rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">
                @Model.SuccessMessage
            </div>
        }
        else if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
        {
            <div class="mb-4 rounded-lg border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
                @Model.ErrorMessage
            </div>
        }

        <form method="post" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1" asp-for="Input.UserName"></label>
                <input class="w-full rounded-lg border border-gray-200 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-teal-500"
                       asp-for="Input.UserName" autocomplete="username" />
                <span class="text-sm text-red-600" asp-validation-for="Input.UserName"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1" asp-for="Input.Password"></label>
                <input class="w-full rounded-lg border border-gray-200 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-teal-500"
                       asp-for="Input.Password" type="password" autocomplete="new-password" />
                <span class="text-sm text-red-600" asp-validation-for="Input.Password"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1" asp-for="Input.ConfirmPassword"></label>
                <input class="w-full rounded-lg border border-gray-200 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-teal-500"
                       asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password" />
                <span class="text-sm text-red-600" asp-validation-for="Input.ConfirmPassword"></span>
            </div>

            <button type="submit" class="w-full px-4 py-3 rounded-lg bg-teal-600 text-white font-semibold hover:bg-teal-700 transition-colors">
                ??ng ký
            </button>
        </form>

        <div class="mt-6 text-center text-sm text-gray-600">
            ?ã có tài kho?n?
            <a class="font-semibold text-teal-700 hover:text-teal-800" asp-page="/Account/Login">??ng nh?p</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
