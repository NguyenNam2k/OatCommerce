<Window x:Class="PRN212_ProjectTeam1.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="HomePage" Height="950" Width="1560"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"></BooleanToVisibilityConverter>
    </Window.Resources>

    <Border Background="#eff2f7" CornerRadius="30">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left menu without icons -->
            <Grid Margin="0,26,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="1" Background="#07bf96" CornerRadius="0 50 0 30" Margin="0,14,0,0">
                    <DockPanel>
                        <Border Width="80" Height="80" Padding="3" Background="White" CornerRadius="100"
                                DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="20 -30 0 0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <!--source anh-->
                                    <ImageBrush ImageSource="Images/customer.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Border>
                        <!-- Menu title -->
                        <TextBlock Foreground="White" FontSize="22" FontWeight="SemiBold"
                                   DockPanel.Dock="Top" TextAlignment="Center" Margin="5 25 0 10" Text="NHÓM ONE"/>
                        <TextBlock Text="Welcome Customer" Foreground="#ffff" FontSize="14" FontWeight="SemiBold"
                                   DockPanel.Dock="Top" TextAlignment="Center"/>

                        <!-- Menu separator -->
                        <Separator Margin="25" DockPanel.Dock="Top" Height="0.8" Background="#ffff"/>
                        <!-- Menu buttons -->
                        <StackPanel DockPanel.Dock="Top">
                            <Button Margin="10" Padding="5" Background="Transparent" Foreground="White" Click="Home_Click">
                                <TextBlock Text="🏠 HomePage" FontSize="16" VerticalAlignment="Center"/>
                            </Button>
                            <Button Margin="10" Padding="5" Background="Transparent" Foreground="White" Click="Login_Click">
                                <TextBlock Text="🚪 Logout" FontSize="16" VerticalAlignment="Center"/>
                            </Button>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </Grid>

            <!-- Grid layout for products within the existing Border -->
            <ListView x:Name="ProductListView" Grid.Column="1" Margin="31,46,25,48">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="10" Margin="10" Padding="10">
                            <StackPanel>
                                <!-- Product Image -->
                                <Image Source="{Binding Image}" Width="150" Height="150" Margin="0,0,0,10"/>
                                <!-- Product Name -->
                                <TextBlock Text="{Binding ProductName}" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,5"/>
                                <!-- Product Price -->
                                <TextBlock Text="{Binding SellPrice, StringFormat={}{0:C}}" Foreground="Green" TextAlignment="Center"/>
                                <!-- Cart Button -->
                                <Button Content="🛒 Cart" Margin="0,10,0,0" Padding="5" Click="CartButton_Click"

                                Command="{Binding DataContext.CartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Border>
</Window>
