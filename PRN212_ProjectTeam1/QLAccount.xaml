<UserControl x:Class="PRN212_ProjectTeam1.QLAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_ProjectTeam1"
        mc:Ignorable="d"
        Height="850"
        Width="1100"
        Name="Account"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        DataContext="{StaticResource UserVM}"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"     
        >


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Label Content="Account Manage"
                   Grid.ColumnSpan="2"
                   FontFamily="Sitka Subheading"
                   FontSize="22"
                   Padding="0"
                   FontWeight="Bold"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center" />
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <materialDesign:Card Grid.Row="0"
                                 Margin="10">

            </materialDesign:Card>

            <materialDesign:Card Grid.Row="1"
                                 Margin="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="20" >
                        <WrapPanel>
                            <TextBox x:Name="tbName" Width="280"
                                     materialDesign:HintAssist.Hint="UserName"
                                     FontSize="15"
                                     Background="Transparent"
                                     FontFamily="Sitka Subheading"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center" Text="{Binding User.UserName , UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     />
                            <TextBox x:Name="tbGender" Width="280"
                                     FontSize="15"
                                     Background="Transparent"
                                     FontFamily="Sitka Subheading"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"
                                     Text="{Binding User.Gender , UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"
                                     materialDesign:HintAssist.Hint="Gender"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                        </WrapPanel>
                    </Grid>
                    <Grid Grid.Column="1" Margin="20">
                        <WrapPanel>
                            <DatePicker x:Name="dpDob"
                                Width="280"
                                Height="45"
                                SelectedDate="{Binding User.Dob, StringFormat='MM-dd-yyyy'}"
                                materialDesign:HintAssist.Hint="Date Of Birth" />       

                            <TextBox x:Name="tbUserRole" Width="280"
                                 Text="{Binding UserRole}"
                                 FontSize="15"
                                 Background="Transparent"
                                 FontFamily="Sitka Subheading"
                                 FontWeight="Bold"
                                 VerticalAlignment="Center"
                                 materialDesign:HintAssist.Hint="User Role"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" />                  

                        </WrapPanel>
                    </Grid>
                </Grid>
            </materialDesign:Card>
            <materialDesign:Card Grid.Row="2"
                                 Margin="0">

                <WrapPanel>
                    <Button x:Name="btnAdd" Content="Add"
                            Command="{Binding AddCommand}" Style="{StaticResource mainbutton}" Width="80"
                            Margin="5"></Button>
                    <Button x:Name="btnDelete" Content="Delete"
                            Command="{Binding DeleteCommand}" Style="{StaticResource mainbutton}" Width="80"
                            Margin="5" ></Button>
                    <Button x:Name="btnUpdate" Content="Update"
                            Command="{Binding UpdateCommand}" Style="{StaticResource mainbutton}" Width="80"
                            Margin="5" ></Button>

                </WrapPanel>
            </materialDesign:Card>

            <materialDesign:Card Grid.Row="3"
                                 Margin="0"
                                 VerticalAlignment="Center">
                <ListView ItemsSource="{Binding Users}" SelectedItem="{Binding User,Mode=OneWayToSource}" 
                          Width="Auto"
                          Height="500"
                          >
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="UserId"
                                            Width="auto"
                                            DisplayMemberBinding="{Binding UserId}"></GridViewColumn>
                            <GridViewColumn Header="UserName"
                                            Width="auto"
                                            DisplayMemberBinding="{Binding UserName}"></GridViewColumn>
                            <GridViewColumn Header="Gender" Width="auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding Gender}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Gender}" Value="True">
                                                            <Setter Property="Text" Value="Male" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Gender}" Value="False">
                                                            <Setter Property="Text" Value="Female" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Dob"
                                            Width="auto"
                                            DisplayMemberBinding="{Binding Dob}"></GridViewColumn>
                            <GridViewColumn Header="UserRole" Width="auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding UserRole}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding UserRole}" Value="1">
                                                            <Setter Property="Text" Value="Admin" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding UserRole}" Value="2">
                                                            <Setter Property="Text" Value="User" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding UserRole}" Value="3">
                                                            <Setter Property="Text" Value="Staff" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>
                </ListView>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
    